@model Lab5.Models.Schedule

<h1>Edit Schedule</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="GroupId" class="control-label">Group</label>
                <select asp-for="GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
            </div>
            <div class="form-group">
                <label for="InstructorId" class="control-label">Instructor</label>
                <select asp-for="InstructorId" class="form-control" asp-items="ViewBag.InstructorId"></select>
            </div>
            <div class="form-group">
                <label for="ClassroomId" class="control-label">Classroom</label>
                <select asp-for="ClassroomId" class="form-control" asp-items="ViewBag.ClassroomId"></select>
            </div>
            <div class="form-group">
                <label for="ClassPeriodId" class="control-label">Time Period</label>
                <select asp-for="ClassPeriodId" class="form-control" asp-items="ViewBag.ClassPeriodId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>